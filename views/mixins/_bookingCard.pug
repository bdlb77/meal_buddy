mixin bookingCard(booking = {})
  .booking-card(style=`background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.4)), url('/uploads/pic.jpg');`)
    .booking-card__background
      .booking-card__title
        h1= booking.event.title
      .booking-card__amount
        h4: Booked for: #{booking.amount} persons
      .booking-card__confirmed
        h4 #{booking.confirmed ? "Confirmed!" : "Pending.."}