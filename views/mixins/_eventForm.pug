
mixin eventForm(event = {})  
  h1=event.title
  form.event__form(action=`/add/${event._id || ''}` method="POST" enctype="multipart/form-data")
      input(type="text" name="title" placeholder="Title" value=event.title)
      textarea(name="description" placeholder="Event Description")=event.description
      input(type="text" name="location[address]" placeholder="Address" value=(event.location && event.location.address))
      input(type="number" name="minCapacity" placeholder="Minimum Capacity" value=event.minCapacity)
      input(type="number" name="maxCapacity" placeholder="Maximum Capacity" value=event.maxCapacity)
      input(type="number" name="price" placeholder="Price" value=event.price)
      input(type="date" name="date"  placeholder="Date" value=event.date)
      input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
      if (event.photo)
        img(src=`/uploads/${event.photo}` alt=event.title width=200)
      input(type="submit" value="save" class="button")

